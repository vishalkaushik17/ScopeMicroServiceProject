{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "../wwwroot/dist",
    "noImplicitAny": false,
    "noEmitOnError": false, //when error occurred, do not generate correspondence js file.
    "removeComments": true,
    "strict": true,
    "lib": [ "DOM", "ES6", "ES2015.Promise", "DOM.Iterable", "ScriptHost" ], //if we comment lib setting, its a default with es6
    "sourceMap": true,
    "target": "ES6",
    "outDir": "../wwwroot/dist",
    // "rootDir": "./TypeScript",
    "moduleResolution": "node",
    "module": "ES2015",
    //"alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    // "strictNullChecks": true


  },
  //"include": [
  //  "TypeScript/**/*"
  //],
  //"exclude": [
  //  "**/*.js"
  //]
  "exclude": ["node_modules"]
}