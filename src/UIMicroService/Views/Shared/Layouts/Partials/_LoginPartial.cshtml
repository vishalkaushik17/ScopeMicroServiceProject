@using Microsoft.AspNetCore.Mvc.TagHelpers
@using ScopeCoreWebApp.Methods
@using ScopeCoreWebApp.Middleware
@inject IHttpContextAccessor HttpContextAccessor

@if (UserIdentity.IsSignedIn(HttpContextAccessor?.HttpContext))
{
    <a class="nav-link text-dark" asp-area="Identity" asp-controller="Account" asp-action="Register" title="Manage">Hello @HttpContextAccessor?.HttpContext?.GetFullName()!</a>
    @*asp - route - returnUrl = "@Url.Page(" / ", new { area = "Home" })"*@
    <form class="form-inline" asp-area="Identity" asp-controller="Account" asp-action="Logout" method="post">
        <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
    </form>
}
else
{
    <a class="nav-link text-dark" asp-area="Identity" asp-controller="Account" asp-action="Register">Register</a>
    <a class="nav-link text-dark" asp-area="Identity" asp-controller="Account" asp-action="Login">Login</a>
}

