<div class="pull-right hidden-xs">
    @{
        var isTraceRequired = AppSettingsConfigurationManager.AppSetting.GetValue<bool>("IsTraceRequired");
        if (isTraceRequired)
        {
                <b>View Logs</b> <a href="#" id="logModel" onclick="toggleModel('.modal-body');"><i class="fa fa-file"></i></a>
        }
    }
    

    <b>Version</b> 1.0.0
</div>
<strong>Copyright &copy; @DateTime.Now.Year-@DateTime.Now.AddYears(1).Year <a href="https://codingcompany.in">Coding Company Pvt Ltd.</a>.</strong> All rights reserved.
<link href="~/css/logmodel.css" rel="stylesheet" asp-append-version="true" />
<div class="modal-body" id="logModelbox" hidden="hidden">
    <div class="row">
        <div class="modal fade" id="logmodal-default" data-backdrop="static" data-keyboard="false" style="display: none;">
            <div class="modal-dialog">
                <div class="modal-content">

                    <div class="modal-header">
                        <button type="button" class="close" onclick="toggleModel('#logModelbox');" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                        <h4 class="modal-title">Application Logs</h4>
                    </div>
                    <div class="modal-body" id="logModelBody">
                        @* onscroll="document.getElementById('scrollTopModel').innerHTML = document.getElementById('logModelBody').scrollTop;" *@
                        <div class="box box-primary">
                            <div class="box-body" id="logs" >
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button id="scrollTopModel" onclick="document.getElementById('logModelBody').scrollTop = 0" class="btn btn-light">
                            <span class="material-symbols-outlined">
                                keyboard_double_arrow_up
                            </span>
                        </button>
                        <button id="scrollBottomModel" onclick="document.getElementById('logModelBody').scrollTop = document.getElementById('logModelBody').scrollHeight" class="btn btn-light">
                            <span class="material-symbols-outlined">
                                keyboard_double_arrow_down
                            </span>
                        </button>
                        <button id="clearLogModel" onclick="document.getElementById('logs').innerHTML = ``" class="btn btn-warning">
                            <span class="material-symbols-outlined">
                                ink_eraser
                            </span>
                        </button>
                        <button id="closeLogModel" onclick="toggleModel('#logModelbox');" class="btn btn-info">
                            <span class="material-symbols-outlined">
                                close
                            </span>
                        </button>
                    </div>

                </div>

            </div>

        </div>
    </div>
</div>
@if (isTraceRequired)
{
    <script asp-append-version="true" src="~/js/scope/layout/footer.js"></script>
}
<script>
    let isTraceRequired = "@Html.Raw(isTraceRequired)";
    (function () {
        if (isTraceRequired)
        document.getElementById('logs').innerHTML = `@Html.Raw(TempData["ExecutionLogs"])`;

    })();
</script>