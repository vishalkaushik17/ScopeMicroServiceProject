@model VendorMasterVm

<div class="modal-body">
    <div class="row">
        <div class="modal fade" id="modal-default" data-backdrop="static" data-keyboard="false" style="display: none;">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form id="modelForm" action="" method="post" class="js-validation">
                        <div class="modal-header">
                            <button type="button" id="model-close-x" class="close" data-dismiss="modal" aria-label="Close">
                            </button>
                            <h4 class="modal-title">Vendor</h4>
                        </div>
                        <div class="modal-body">
                            <div class="box box-primary">
                                <div class="box-body">
                                    <partial name="Layouts/Partials/_AlertView" />
                                    @Html.HiddenFor(a => a.Id, new { @DBValue = "true", @class = "resetdata" })
                                    @Html.HiddenFor(a => a.AddressId, new { @DBValue = "true", @class = "resetdata" })
                                    @Html.HiddenFor(a => a.Address.Id, new { @DBValue = "true", @class = "resetdata" })
                                    <div class="row">
                                        <div class="col-xs-6 col-sm-6">
                                            <div class="input-field">
                                                @Html.TextBoxFor(a => a.CompanyName, new { required = "required", customMessage = "Please enter Company name!", @class = "first requiredfield resetdata", onClick = "this.setSelectionRange(0, this.value.length)", placeholder = " ", @title = "enter company name!" })
                                                <span class="glyphicon glyphicon-key form-control-feedback"></span>
                                                <label for="CompanyName">Company Name</label>
                                            </div>
                                        </div>
                                        <div class="col-xs-2 col-sm-6">
                                            <div class="input-field">
                                                @Html.TextBoxFor(a => a.ContactPerson, new { required = "required", customMessage = "Please enter Contact person name!", @class = "requiredfield resetdata", onClick = "this.setSelectionRange(0, this.value.length)", placeholder = " " })
                                                <span class="glyphicon glyphicon-key form-control-feedback"></span>
                                                <label for="ContactPerson">Contact Person</label>
                                            </div>
                                        </div>
                                        <div class="col-xs-2 col-sm-6">
                                            <div class="input-field">
                                                @Html.TextBoxFor(a => a.Address.Address1, new { @class = "notrequiredfield resetdata", onClick = "this.setSelectionRange(0, this.value.length)", placeholder = " " })
                                                <span class="glyphicon glyphicon-key form-control-feedback"></span>
                                                <label for="Address">Address Line 1</label>
                                            </div>
                                        </div>
                                        <div class="col-xs-2 col-sm-6">
                                            <div class="input-field">
                                                @Html.TextBoxFor(a => a.Address.Address2, new {@class = "notrequiredfield resetdata", onClick = "this.setSelectionRange(0, this.value.length)", placeholder = " " })
                                                <span class="glyphicon glyphicon-key form-control-feedback"></span>
                                                <label for="Address">Address Line 2</label>
                                            </div>
                                        </div>
                                        <div class="col-xs-4 col-sm-4">
                                            <div class="input-field">
                                                @Html.TextBoxFor(a => a.Address.Milestone, new { @class = "notrequiredfield resetdata", onClick = "this.setSelectionRange(0, this.value.length)", placeholder = " " })
                                                <span class="glyphicon glyphicon-key form-control-feedback"></span>
                                                <label for="Milestone">Milestone</label>
                                            </div>
                                        </div>
                                        <div class="col-xs-2 col-sm-4">
                                            <div class="input-field">
                                                @Html.TextBoxFor(a => a.Address.City, new {@class = "notrequiredfield resetdata", onClick = "this.setSelectionRange(0, this.value.length)", placeholder = " ", @title = "Enter barcode." })
                                                <span class="glyphicon glyphicon-key form-control-feedback"></span>
                                                <label for="City">City</label>
                                            </div>
                                        </div>
                                        <div class="col-xs-4 col-sm-4">
                                            <div class="input-field">
                                                @Html.TextBoxFor(a => a.Address.State, new { @class = "notrequiredfield resetdata", onClick = "this.setSelectionRange(0, this.value.length)", placeholder = " " })
                                                <span class="glyphicon glyphicon-key form-control-feedback"></span>
                                                <label for="State">State</label>
                                            </div>
                                        </div>
                                        <div class="col-xs-4 col-sm-4">
                                            <div class="input-field">
                                                @Html.TextBoxFor(a => a.Address.Country, new { @class = "notrequiredfield resetdata", onClick = "this.setSelectionRange(0, this.value.length)", placeholder = " " })
                                                <span class="glyphicon glyphicon-key form-control-feedback"></span>
                                                <label for="Country">Country</label>
                                            </div>
                                        </div>
                                        <div class="col-xs-4 col-sm-3">
                                            <div class="input-field">
                                                @Html.TextBoxFor(a => a.ContactNo, new {  @class = "notrequiredfield resetdata", onClick = "this.setSelectionRange(0, this.value.length)", placeholder = " " })
                                                <span class="glyphicon glyphicon-key form-control-feedback"></span>
                                                <label for="Website">ContactNo</label>
                                            </div>
                                        </div>
                                        <div class="col-xs-4 col-sm-3">
                                            <div class="input-field">
                                                @Html.TextBoxFor(a => a.Website, new { pattern = "^(https?:\\/\\/)?((([-a-z0-9]{1,63}\\.)*?[a-z0-9]([-a-z0-9]{0,253}[a-z0-9])?\\.[a-z]{2,63})|((\\d{1,3}\\.){3}\\d{1,3}))(:\\d{1,5})?((\\/|\\?)((%[0-9a-f]{2})|[-\\w\\+\\.\\?\\/@~#&=])*)?$", customMessage = "Invalid website URL format!", @class = "notrequiredfield resetdata", onClick = "this.setSelectionRange(0, this.value.length)", placeholder = " " })
                                                <span class="glyphicon glyphicon-key form-control-feedback"></span>
                                                <label for="Website">Website</label>
                                            </div>
                                        </div>
                                        <div class="col-xs-4 col-sm-3">
                                            <div class="input-field">
                                                @Html.TextBoxFor(a => a.EmailId, new { pattern = "^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?(?:.[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?)*$", customMessage = "Invalid email address format!", @class = "notrequiredfield resetdata", onClick = "this.setSelectionRange(0, this.value.length)", placeholder = " " })
                                                <span class="glyphicon glyphicon-key form-control-feedback"></span>
                                                <label for="EmailId">EmailId</label>
                                            </div>
                                        </div>
                                        <div class="col-xs-4 col-sm-3">
                                            <div class="input-field">
                                                @Html.TextBoxFor(a => a.GSTNo, new { pattern = "^[0-9]{2}[A-Z]{5}[0-9]{4}[A-Z]{1}[1-9A-Z]{1}Z[0-9A-Z]{1}$", customMessage = "Invalid GST no format!", @class = "notrequiredfield resetdata", onClick = "this.setSelectionRange(0, this.value.length)", placeholder = " " })
                                                <span class="glyphicon glyphicon-key form-control-feedback"></span>
                                                <label for="GSTNo">GST No</label>
                                            </div>
                                        </div>
                                        <div class="col-xs-4 col-sm-3">
                                            <div class="input-field">
                                                @Html.TextBoxFor(a => a.CSTNo, new { pattern = "^[0-9]{2}[A-Z]{5}[0-9]{4}[A-Z]{1}[1-9A-Z]{1}Z[0-9A-Z]{1}$", customMessage = "Invalid CST no format!", @class = "notrequiredfield resetdata", onClick = "this.setSelectionRange(0, this.value.length)", placeholder = " " })
                                                <span class="glyphicon glyphicon-key form-control-feedback"></span>
                                                <label for="CSTNo">CST No</label>
                                            </div>
                                        </div>                                        
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="modal-footer" id="crud">
                            <partial name="Layouts/Partials/_CrudButtonsPartial" />
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>