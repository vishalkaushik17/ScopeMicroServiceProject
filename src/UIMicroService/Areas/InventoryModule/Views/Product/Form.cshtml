@model ProductVm

<div class="modal-body">
    <div class="row">
        <div class="modal fade" id="modal-default" data-backdrop="static" data-keyboard="false" style="display: none;">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form id="modelForm" action="" method="post" enctype="multipart/form-data" class="js-validation">
                        <div class="modal-header">
                            <button type="button" id="model-close-x" class="close" data-dismiss="modal" aria-label="Close">
                            </button>
                            <h4 class="modal-title">Product</h4>
                        </div>
                        <div class="modal-body">
                            <div class="box box-primary">
                                <div class="box-body">
                                    <partial name="Layouts/Partials/_AlertView" />
                                    @Html.HiddenFor(a => a.Id, new { @DBValue = "true", @class = "resetdata" })
                                    @Html.HiddenFor(a => a.ProductImage, new { reflectionOn = "ImagePreview", @class = "resetdata" })
                                    <div class="row">
                                        <div class="col-xs-6 col-sm-4">
                                            <div class="input-field">
                                                @Html.TextBoxFor(a => a.ProductName, new { required = "required", @class = "first requiredfield resetdata", onClick = "this.setSelectionRange(0, this.value.length)", placeholder = " ", @title = "enter product name!" })
                                                <span class="glyphicon glyphicon-key form-control-feedback"></span>
                                                <label for="ProductName">Product Name</label>
                                            </div>
                                        </div>
                                        <div class="col-xs-2 col-sm-3">
                                            <div class="input-field">
                                                @Html.TextBoxFor(a => a.CompanyBarCode, new { pattern = "^[0-9]*$", @class = "notrequiredfield resetdata", customMessage = "Please enter numeric value!", onClick = "this.setSelectionRange(0, this.value.length)", placeholder = " " })
                                                <span class="glyphicon glyphicon-key form-control-feedback"></span>
                                                <label for="CompanyBarCode">Product Barcode</label>
                                            </div>
                                        </div>
                                        <div class="col-xs-2 col-sm-3">
                                            <div class="input-field">
                                                @Html.TextBoxFor(a => a.CustomBarCode, new { pattern = "^[0-9]*$", @class = "notrequiredfield resetdata", customMessage = "Please enter numeric value!", onClick = "this.setSelectionRange(0, this.value.length)", placeholder = " " })
                                                <span class="glyphicon glyphicon-key form-control-feedback"></span>
                                                <label for="CustomBarCode">Local Barcode</label>
                                            </div>
                                        </div>
                                        <div class="col-xs-2 col-sm-2">
                                            <div class="input-field">
                                                @Html.TextBoxFor(a => a.UnitPerBox, new { pattern = "[0-9.]", required = "required", customMessage = "Please enter numeric value!", @class = "requiredfield resetdata", onClick = "this.setSelectionRange(0, this.value.length)", placeholder = " ", @title = "Enter barcode." })
                                                <span class="glyphicon glyphicon-key form-control-feedback"></span>
                                                <label for="UnitPerBox">Unit per box/piece</label>
                                            </div>
                                        </div>
                                        <div class="col-xs-4 col-sm-4">
                                            <div class="input-field">
                                                @Html.TextBoxFor(a => a.Details, new { @class = "notrequiredfield resetdata", @rows = "10", style = "height: 300px;", onClick = "this.setSelectionRange(0, this.value.length)", placeholder = " " })
                                                <span class="glyphicon glyphicon-key form-control-feedback"></span>
                                                <label for="Details">Product Details</label>
                                            </div>
                                        </div>
                                        <div class="col-xs-4 col-sm-4">
                                            <div class="input-field">
                                                <input type="file" id="UploadImage" name="UploadImage" accept="image/*" class="notrequiredfield resetdata" , reflectionOn="ImagePrview">
                                                <span class="glyphicon glyphicon-key form-control-feedback"></span>
                                                <label for="Details">Product Image Link</label>
                                            </div>
                                        </div>
                                        <div class="col-xs-4 col-sm-2">

                                            <div class="card">
                                                <div class="card-header">
                                                    @* <h3 class="card-title" id="productName">Product Name</h3> *@
                                                    <div class="card-tools">
                                                        <span class="badge badge-primary">Product image</span>
                                                    </div>
                                                    <!-- /.card-tools -->
                                                </div>
                                                <!-- /.card-header -->
                                                <div class="card-body">
                                                    <img id="ImagePreview" name="ImagePreview" src="#" alt="Image" style="width:50%">
                                                </div>
                                                <!-- /.card-footer -->
                                            </div>
                                            <!-- /.card -->

                                        </div>


                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="modal-footer" id="crud">
                            <partial name="Layouts/Partials/_CrudButtonsPartial" />
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>