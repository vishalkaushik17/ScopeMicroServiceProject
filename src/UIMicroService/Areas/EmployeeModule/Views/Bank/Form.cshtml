@model VModelLayer.EmployeeModule.BankVM

<div class="modal-body">
    <div class="row">
        <div class="modal fade" id="modal-default" data-backdrop="static" data-keyboard="false" style="display: none;">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form id="modelForm" action="" method="post" class="js-validation">
                        <div class="modal-header">
                            <button type="button" id="model-close-x" class="close" data-dismiss="modal" aria-label="Close">
                            </button>
                            <h4 class="modal-title">Banks</h4>
                        </div>
                        <div class="modal-body">
                            <div class="box box-primary">
                                <div class="box-body">
                                    <partial name="Layouts/Partials/_AlertView" />
                                    @Html.HiddenFor(a => a.Id, new { @class = "resetdata" })
                                    
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <div class="input-field">
                                                @Html.TextBoxFor(a => a.Name, new { required = "required", @class = "first requiredfield", onClick = "this.setSelectionRange(0, this.value.length)", placeholder = " ", @minlength = "2", @maxlength = "50" })
                                                <span class="glyphicon glyphicon-key form-control-feedback"></span>
                                                <label for="Name">Bank Name</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="modal-footer" id="crud">
                            <partial name="Layouts/Partials/_CrudButtonsPartial" />
                        </div>

                    </form>

                </div>

            </div>

        </div>
    </div>
</div>