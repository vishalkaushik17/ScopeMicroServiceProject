@model VModelLayer.SchoolLibrary.LibraryAuthorVm;
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Books
        <small>Index</small>
    </h1>
    <ol class="breadcrumb">
        <li><a Partial_Nav_Link href='#@Url.Action("Index", new {Controller = "Home",Area = "Dashboard"})'><i class="fa fa-home badge-danger"></i> Home</a></li>
    </ol>
</section>
<partial name="Layouts/Partials/_ActionButtonsPartial" />
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Index Page</h3>
                    <div class="btn-group pull-right">
                        <button id="refreshIndex" title="Reload data from server." class="btn btn-xs btn-default cacheButton refresh"><span class="glyphicon glyphicon-repeat slow-left-spinner"></span></button>
                    </div>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <table id="indexDataTable" class="table table-bordered table-hover dataTable">
                        <thead>
                            <tr class="head">
                                <th></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->
@await Html.PartialAsync("Form", Model)
