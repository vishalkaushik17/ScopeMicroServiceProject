@model VModelLayer.SchoolLibrary.LibraryRoomVm;

<div class="modal-body">
    <div class="row">
        <div class="modal fade" id="modal-default" data-backdrop="static" data-keyboard="false" style="display: none;">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form id="modelFormRoom" action="" method="post" class="js-validation">
                        <div class="modal-header">
                            <button type="button" id="model-close-x" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                            <h4 class="modal-title">Rooms</h4>
                        </div>
                        <div class="modal-body">
                            <div class="box box-primary">
                                <div class="box-body">
                                    <partial name="Layouts/Partials/_AlertView" />
                                    @Html.HiddenFor(a => a.Id, new { @DBValue = "true", @class = "resetdata" })
                                    @Html.HiddenFor(a => a.LibraryId, new { @DBValue = "true", @class = "resetdata" })

                                    <div class="row">
                                        <div class="col-xs-6">
                                            <div class="input-select">
                                                @Html.DropDownListFor(a => a.Libraries,new List<SelectListItem>(),"Select Library",new {required="required" , @class="first requiredfield",})
                                                <span class="glyphicon glyphicon-key form-control-feedback"></span>
                                                <label>Library</label>
                                            </div>
                                        </div>
                                        <div class="col-xs-6">
                                            <div class="input-field">
                                                @Html.TextBoxFor(a => a.Name,new {required="required" , @class="first requiredfield",onClick="this.setSelectionRange(0, this.value.length)",placeholder=" "})
                                                <span class="glyphicon glyphicon-key form-control-feedback"></span>
                                                <label>Room Name</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="modal-footer" id="crud">
                            <partial name="Layouts/Partials/_CrudButtonsPartial" />
                        </div>
                    </form>

                </div>

            </div>

        </div>
    </div>
</div>