@model VModelLayer.SchoolLibrary.LibraryRoomVm;

@*<link href="~/css/site.min.css" rel="stylesheet" asp-append-version="true" />*@

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Rooms
        <small>Index</small>
    </h1>
    <ol class="breadcrumb">
        <li><a asp-action="Index" asp-controller="Home" asp-area="dashboard"><i class="fa fa-home badge-danger"></i> Home</a></li>
    </ol>

</section>
<partial name="Layouts/Partials/_ActionButtonsPartial" />
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Index Page</h3>
                    <div class="btn-group pull-right">
                        <button id="refreshIndex" onclick="clearCache(); RefreshRoomIndexWithoutCache(); " title="Reload data from server." class="btn btn-xs btn-default cacheButton refresh"><span class="glyphicon glyphicon-repeat slow-left-spinner"></span></button>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <div class="col-xs-3">
                            <div class="input-select">
                                @Html.DropDownListFor(a => a.Libraries,new List<SelectListItem>(),"Select Library",new {Id="SelectedLibraries",required="required" , @class="first requiredfield",})
                                <span class="glyphicon glyphicon-key form-control-feedback"></span>
                                <label>Library</label>
                            </div>
                        </div>

                        <table id="indexDataTable" class="table table-bordered table-hover dataTable">
                            <thead>
                                <tr class="head">
                                    <th>Room Name</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.row -->
</section><!-- /.content -->
@await Html.PartialAsync("Form", Model)

@section Scripts{
    <script src="https://cdn.datatables.net/v/dt/dt-1.13.4/datatables.min.js" integrity="sha512-X6UwHx0Ur3ivkMqcmO+KcSnkmGQ2gnG5IivrEHMeY4pNc1GjFgGEAWxlJZGa1l37YwCtIq5LXxZgkw7NB3x6+w==" crossorigin="anonymous"></script>
    <environment include="Development">
        <script src="~/js/scope/schoollibrary/room/RoomCrudOperations.js" asp-append-version="true"></script>
    </environment>
    <environment include="Production">
        <script src="~/js/scope/schoollibrary/room/RoomCrudOperations.min.js" asp-append-version="true"></script>
    </environment>

}





